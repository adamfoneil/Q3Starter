<Window x:Class="Q3Starter.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Q3Starter.Wpf"
        mc:Ignorable="d"
        Title="Q3Starter" Height="500" Width="720"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- BaseQ3 Path -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="BaseQ3 Path:" VerticalAlignment="Center" Width="100"/>
            <TextBox Grid.Column="1" x:Name="tbBasePath" VerticalAlignment="Center" Padding="3"/>
        </Grid>

        <!-- Profile -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Profile:" VerticalAlignment="Center" Width="100"/>
            <ComboBox Grid.Column="1" x:Name="cbProfile" VerticalAlignment="Center" Width="200" HorizontalAlignment="Left"
                      SelectionChanged="cbProfile_SelectionChanged"/>
        </Grid>

        <!-- Frag Limit -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Frag Limit:" VerticalAlignment="Center" Width="100"/>
            <TextBox Grid.Column="1" x:Name="nudFragLimit" VerticalAlignment="Center" Width="70" HorizontalAlignment="Left" Padding="3"/>
        </Grid>

        <!-- Game Exe and Play Button -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Game Exe:" VerticalAlignment="Center" Width="100"/>
            <TextBox Grid.Column="1" x:Name="tbGameExe" VerticalAlignment="Center" Margin="0,0,10,0" Padding="3"/>
            <Button Grid.Column="2" x:Name="btnPlay" Content="Play" Width="75" Padding="5" Click="btnPlay_Click"/>
        </Grid>

        <!-- Tab Control -->
        <TabControl Grid.Row="4" x:Name="tabControl1">
            <TabItem Header="Maps">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Maps CheckedListBox -->
                    <ListBox Grid.Column="0" Grid.Row="0" x:Name="lbMaps" 
                             SelectionChanged="lbMaps_SelectionChanged"
                             PreviewKeyDown="lbMaps_PreviewKeyDown"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}" 
                                         IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                         Checked="MapCheckBox_Changed"
                                         Unchecked="MapCheckBox_Changed"
                                         PreviewMouseDown="MapCheckBox_PreviewMouseDown"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Selected count label -->
                    <Label Grid.Column="0" Grid.Row="1" x:Name="lblSelected" Content="0 maps selected" Margin="5,0,5,5"/>

                    <!-- Map Thumbnail -->
                    <Image Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" x:Name="pictureBox1" 
                           Margin="5" Stretch="Uniform"/>
                </Grid>
            </TabItem>
            <TabItem Header="Config Preview">
                <TextBox x:Name="tbConfig" 
                         IsReadOnly="True" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         Margin="5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
